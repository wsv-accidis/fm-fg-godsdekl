<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#000000</color>
    <color name="darkgray">#808080</color>
    <color name="darkgreen">#304020</color>
    <color name="red">#FF0000</color>
    <color name="white">#FFFFFF</color>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Global app theme -->
    </style>

    <style name="AboutHeading">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AboutText">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AddressHeading">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DocumentAddressHeading">
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DocumentAddressText">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DocumentListItemPrimary">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DocumentListItemSecondary">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DocumentNoticeText">
        <item name="android:textColor">@color/darkgray</item>
    </style>

    <style name="DocumentSaveHeading">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DocumentSummaryText">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DocumentRowPrimary">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DocumentRowSecondary">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DocumentRowTertiary" parent="DocumentRowPrimary">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="DocumentRowRightColumn" parent="DocumentRowPrimary">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:gravity">right</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="DocumentWarningText">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="MaterialHeading">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MaterialLabel">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MaterialListItemPrimary">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MaterialListItemSecondary">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MaterialLoadDialogHeading">
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MaterialLoadDialogLabel">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MaterialLoadDialogLabelHeading">
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MaterialLoadDialogSubLabel">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MaterialLoadDialogSubLabelHeading">
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MaterialLoadDialogUnit">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>

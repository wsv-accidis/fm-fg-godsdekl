<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/document_row_vertical_margin"
                android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
                android:paddingRight="?android:attr/listPreferredItemPaddingRight"
                android:paddingTop="@dimen/document_row_vertical_margin">

    <TextView
        android:id="@+id/document_row_packages"
        style="@style/DocumentRowRightColumn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="80dp"/>

    <TextView
        android:id="@+id/document_row_weightvolume"
        style="@style/DocumentRowRightColumn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/document_row_packages"
        android:maxWidth="80dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/document_row_packages"
        android:orientation="vertical">

        <TextView
            android:id="@+id/document_row_text"
            style="@style/DocumentRowPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/document_row_fben"
            style="@style/DocumentRowSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/document_row_nem"
            style="@style/DocumentRowTertiary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>